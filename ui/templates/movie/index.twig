{% extends 'base.twig' %}

{% block title %}{{ title ?? 'Movie' }}{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    {% if movies %}
    Movies
    {% endif %}

    <ul>
        {% for movie in movies %}
        <li>{{ movie.title }}</li>
        {% else %}
        <li>No movie found</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}