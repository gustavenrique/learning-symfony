{% extends 'base.twig' %}

{% block title %}{{ movie.title ?? 'Movie' }}{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    {% if movie.title and movie.description %}
    <h1>{{ movie.title }}</h1>

    <p>{{ movie.description }}</p>
    {% else %}
    Movie not found
    {% endif %}

    Author: {{ author }}
</div>
{% endblock %}